#!/bin/bash
if [ ! -e "raw_data" ]; then mkfifo raw_data; fi
python image_generator.py -d &
#ffmpeg2theora raw_data -vcodec mjpeg --inputfps 2 --noaudio -o -| oggfwd localhost 8000 hackme /thesec.ogg 
ffmpeg -y -r 4 -bufsize 100 -vcodec mjpeg -f image2pipe -i raw_data -bufsize 100 -f ogg -vcodec libtheora pipe:1 | oggfwd localhost 8000 hackme /thesec.ogv
